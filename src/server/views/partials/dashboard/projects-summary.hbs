<div class="projects-summary">
  <div class="projects-summary__distribution">
    {{#each projects}}
      <div class="fill-{{color}}" style="flex-basis: {{percentage}}%; fill: {{color}}"></div>
    {{/each}}
  </div>
  <ul class="projects-summary__projects unstyled">
    {{#each projects}}
      <li>
        <a class="projects-summary__project-link" href="/projects/{{alias}}">
          <span class="projects-summary__project-name" style="color: {{projectColor .}}">
            {{name}}
          </span>
          <span class="projects-summary__project-stats">
            {{formatDurationMs duration}}

            {{#if earnings}}
              &middot; {{formatCurrency earnings}}
            {{/if}}
          </span>
        </a>
      </li>
    {{/each}}
  </ul>
</div>