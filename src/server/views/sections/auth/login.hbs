<div class="login page">
  <div class="login-container">
    <h1>Log In</h1>

    {{log messages}}

    <form method="post">
      <input type="hidden" name="username" value="_">

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password"
               class="text-input"
               id="password"
               name="password"
               placeholder="{{placeholder}}">
      </div>

      <div class="form-group">
        <button class="button -wide">
          <span>Log In</span>
        </button>
      </div>
    </form>
  </div>
</div>