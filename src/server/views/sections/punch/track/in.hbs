{{> ui/nav-header title="Punch In" href=returnUrl }}

<div class="punch-in page">
  <form method="post">
    <div class="subsection">
      <header>
        <span>Project</span>
      </header>

      <div class="dropdown">
        <select name="project">
          {{#each projects}}
            <option value="{{alias}}">{{name}}</option>
          {{/each}}
        </select>
        <svg class="dropdown__icon">
          <title>Dropdown indicator</title>
          <use xlink:href="/icons/ikonate.svg#sorting">
        </svg>
      </div>
    </div>

    <button class="button button--pill">
      <svg class="button__icon">
        <title>Punch in</title>
        <use xlink:href="/icons/ikonate.svg#plus"></use>
      </svg>
      <span>Punch In</span>
    </button>
  </form>
</div>